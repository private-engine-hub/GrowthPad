{
  "name": "solito-with-tailwind",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@commitlint/config-conventional": "^20.2.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.2",
    "@semantic-release/npm": "^13.1.3",
    "@types/react": "^18.2.21",
    "@types/react-native": "^0.72.2",
    "commitlint": "^20.2.0",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "eslint": "^8.21.0",
    "husky": "^9.1.7",
    "prettier": "^2.7.1",
    "prettier-plugin-tailwindcss": "^0.5.4",
    "semantic-release": "^25.0.2",
    "turbo": "^1.4.2",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "native": "cd apps/expo && yarn start",
    "web": "cd apps/next && yarn dev",
    "clean": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
    "stop-web": "powershell -Command \"Stop-Process -Id (Get-NetTCPConnection -LocalPort 3000,3001,3002 -ErrorAction SilentlyContinue).OwningProcess -Force\"",
    "kill-ghost": "yarn stop-web",
    "release": "semantic-release",
    "prepare": "husky"
  },
  "resolutions": {
    "metro": "~0.76.7",
    "metro-resolver": "~0.76.7"
  },
  "nohoist": [
    "**/expo-router",
    "**/expo-router/**"
  ],
  "packageManager": "yarn@3.6.3",
  "version": "1.0.0"
}
